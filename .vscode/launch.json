{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "/bin/bash",
            "args": [
                "-c",
                "'make RunDebug'"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "OF_ROOT",
                    "value": "/mnt/LinuxData/OF/openFrameworks"
                }
            ],
            "externalConsole": false,
            "preLaunchTask": "build (Debug)",
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            }
        },
        {
            "name": "RPI3 Cross Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "/bin/bash",
            "args": [
                "-c",
                "ssh -X pi@Rpi3Dev.local 'xterm -T ${workspaceFolderBasename}_armv7l -e' make -C ${workspaceFolder} RunDebug PLATFORM_ARCH='armv7l' PLATFORM_VARIANT='stretch' GST_VERSION='1.0'"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "OF_ROOT",
                    "value": "/mnt/LinuxData/OF/openFrameworks"
                }
            ],
            "pipeTransport": {
            /*    
                "pipeCwd": "/usr/bin",
                "pipeProgram": "enter the fully qualified path for the pipe program name, for example '/usr/bin/ssh'",
                "pipeArgs": [],
                "debuggerPath": "The full path to the debugger on the target machine, for example /usr/bin/gdb."
            */
            },
            "sourceFileMap": {
            //    "<source-path>": "<target-path>"
            },
            "externalConsole": true,
            "preLaunchTask": "RPI3 Cross build",
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            }
        },
        {
            "name": "RPI Cross Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "/bin/bash",
            "args": [
                "-c",
                "ssh -X pi@Rpi3Dev.local 'xterm -T ${workspaceFolderBasename}_armv6l -e' make -C ${workspaceFolder} RunDebug PLATFORM_ARCH='armv6l' PLATFORM_VARIANT='stretch' GST_VERSION='1.0'"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "OF_ROOT",
                    "value": "/mnt/LinuxData/OF/openFrameworks"
                }
            ],
            "externalConsole": true,
            "preLaunchTask": "RPI Cross build",
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            }
        }
    ]
}